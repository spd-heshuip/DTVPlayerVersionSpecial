<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:paddingBottom="0dp"
	android:paddingLeft="0dp"
	android:paddingRight="0dp"
	android:paddingTop="0dp"
	android:background="@color/white">

	<com.eardatek.player.dtvplayer.widget.CustomToolbar
        android:id="@+id/toolbar_scan"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
		app:title="@string/scan"
        app:navigationIcon="@drawable/back">

	</com.eardatek.player.dtvplayer.widget.CustomToolbar>

	<ProgressBar
	    android:id="@+id/progressbar"
	    style="?android:attr/progressBarStyleHorizontal"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <TextView
	        android:id="@+id/tv_show_info1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
            android:textColor="@color/black"
	        android:textSize="24sp" />

	    <com.eardatek.player.dtvplayer.widget.RadarSearchView
	        android:id="@+id/radar_search_view"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" >
	    </com.eardatek.player.dtvplayer.widget.RadarSearchView>

	    <TextView
	        android:id="@+id/tv_show_info2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="324dp"
            android:textColor="@color/black"
	        android:textSize="24sp" />

	</RelativeLayout>
    
</LinearLayout>
