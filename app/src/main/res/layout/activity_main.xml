<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/tips_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/tips"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/tips_text_size"
                    android:textColor="@color/defaultTextColor"
                    android:text="@string/scan_tips"/>

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listViewChannels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutAnimation="@anim/list_item_anim"
                android:layout_weight="1">

            </android.support.v7.widget.RecyclerView>

        </FrameLayout>

        <!--侧滑菜单-->
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/cadetblue"
            android:orientation="vertical"
            android:layout_gravity="start">
            <TextView
                android:id="@+id/ad_search"
                android:layout_marginTop="15dp"
                android:drawablePadding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/advance_search_background"
                android:gravity="center"
                android:clickable="true"
                android:text="@string/advance_search"
                android:textColor="@color/white"
                android:textSize="@dimen/advance_search_text_size"/>
        </LinearLayout>


    </android.support.v4.widget.DrawerLayout>
    

    
</LinearLayout>
